{{ 'product-page.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-page.js' | asset_url }}" defer></script>

<div class="product-main-container">
  <div class="product-left">
    <div class="product-image">
      {% if product.featured_image %}
        {{
          product.featured_image
          | image_url: width: 385
          | image_tag: alt: product.title, class: 'product-image', preload: true
        }}
      {% endif %}
    </div>

    <svg
      data-name="Layer 3"
      class="product-page-waveBottom"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 194.35"
    >
      <path d="M706.45 109.26C782.8 78.3 859.48 46.41 941.49 46.41S1121.26 95.3 1200 95.3c102.45 0 240-95.3 240-95.3H0v73s68.78-11.7 141.86-11.68c162.04 0 247.35 99.95 369.7 99.95 60.7 0 119.14-23.85 177.56-47.05l17.33-4.96Z" fill="#cb3d7a"></path>
      <path d="M1200 85.3c-78.74 0-175.26-48.89-258.51-48.89S782.8 70.3 706.45 101.26c-5.78 2.34-11.55 4.67-17.33 6.96-58.42 23.2-116.86 43.05-177.56 43.05-122.35 0-207.66-99.95-369.7-99.95C68.78 51.3 0 64 0 64v30s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V0s-137.55 85.3-240 85.3Z" fill="var(--magenta)"></path>
      <path d="M941.49 56.41c-150.98 0-283.92 114.86-429.93 114.86-122.35 0-207.66-99.95-369.7-99.95C68.78 71.33 0 84 0 84v20s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V20s-137.55 85.3-240 85.3c-78.74 0-175.26-48.89-258.51-48.89Z" fill="var(--lemon)"></path>
    </svg>

    <div class="product-right mobile-only">
      {% render 'product-right-content' %}
    </div>

    <div class="product-information">
      <svg
        data-name="Layer 3"
        class="product-page-waveBottom-two"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1440 194.35"
      >
        <path d="M706.45 109.26C782.8 78.3 859.48 46.41 941.49 46.41S1121.26 95.3 1200 95.3c102.45 0 240-95.3 240-95.3H0v73s68.78-11.7 141.86-11.68c162.04 0 247.35 99.95 369.7 99.95 60.7 0 119.14-23.85 177.56-47.05l17.33-4.96Z" fill="var(--violet)"></path>
        <path d="M1200 85.3c-78.74 0-175.26-48.89-258.51-48.89S782.8 70.3 706.45 101.26c-5.78 2.34-11.55 4.67-17.33 6.96-58.42 23.2-116.86 43.05-177.56 43.05-122.35 0-207.66-99.95-369.7-99.95C68.78 51.3 0 64 0 64v30s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V0s-137.55 85.3-240 85.3Z" fill="var(--magenta)"></path>
        <path d="M941.49 56.41c-150.98 0-283.92 114.86-429.93 114.86-122.35 0-207.66-99.95-369.7-99.95C68.78 71.33 0 84 0 84v20s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V20s-137.55 85.3-240 85.3c-78.74 0-175.26-48.89-258.51-48.89Z" fill="var(--lemon)"></path>
      </svg>
      <div class="productInformation__description">
        <p>{{ product.description }}</p>
      </div>
      <div class="productInformation__additionalInfo">
        <div class="productInformation__infoBlock">
          <h6>Ingredients</h6>
          Water, Orange Wine, Organic Blue Agave, Sugar, Lime Juice Concentrate, Natural Flavors, Cranberry Juice
          Concentrate, Citric Acid.
        </div>
        <div class="productInformation__infoBlock">
          <h6>Nutrition Facts</h6>
          Per Serving Calories: 120 | Fat: 0g Total Carbohydrate: 5g Total Sugars: 4g
        </div>
        <div class="productInformation__infoBlock">
          <h6>Serving</h6>
          Per Container: 1.75 | 12% ABV
        </div>
      </div>
    </div>
    <div class="additional-left-section">
      {% section 'bundle' %}
      {% section 'image-slider' %}
      {% section 'faqs' %}
      {% section 'reviews' %}
    </div>
  </div>

  <div class="product-right desktop-only">
    {% render 'product-right-content' %}
  </div>
</div>

{% section 'loverboy-slider' %}
{% section 'text-popup' %}
