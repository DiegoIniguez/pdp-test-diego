  <path d="M1200 85.3c-78.74 0-175.26-48.89-258.51-48.89S782.8 70.3 706.45 101.26c-5.78 2.34-11.55 4.67-17.33 6.96-58.42 23.2-116.86 43.05-177.56 43.05-122.35 0-207.66-99.95-369.7-99.95C68.78 51.3 0 64 0 64v30s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V0s-137.55 85.3-240 85.3Z" fill="var(--magenta)"></path>
  <path d="M941.49 56.41c-150.98 0-283.92 114.86-429.93 114.86-122.35 0-207.66-99.95-369.7-99.95C68.78 71.33 0 84 0 84v20s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V20s-137.55 85.3-240 85.3c-78.74 0-175.26-48.89-258.51-48.89Z" fill="var(--lemon)"></path>
</svg>
          </div>
  <div class="imageSwiperNew">
    <div class="swiper image-slider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {{ block.settings.image | image_url: width: 1080 | image_tag: alt: 'Slide image', class: 'slide-img-new', width: '1080', height: 'auto' }}
          </div>
        {% endfor %}
      </div>
    </div>
    
    <div class="imageSwiper__nav">
      <button class="imageSwiper__arrow imageSwiper__arrow--prev">←</button>
      <button class="imageSwiper__arrow imageSwiper__arrow--next">→</button>
    </div>
  </div>
        <div class="wave-wrapper wave-wrapper--bottom">
        <svg id="Layer_2" class="waveTop-slider" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 194.35">
      <path d="M 1440 0 S 1302.45 85.3 1200 85.3 C 1121.26 85.3 1024.74 36.41 941.49 36.41 C 790.51 36.41 657.57 151.27 511.56 151.27 C 389.21 151.27 303.9 51.32 141.86 51.32 C 68.78 51.3 0 64 0 64 V 193.35 H 1440 V 0 Z" fill="var(--magenta)"/>
