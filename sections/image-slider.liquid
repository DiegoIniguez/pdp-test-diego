      <path d="M1440 40s-137.55 85.3-240 85.3c-78.74 0-175.26-48.89-258.51-48.89-150.98 0-283.92 114.86-429.93 114.86-122.35 0-207.66-99.95-369.7-99.95C68.78 91.33 0 104 0 104v90.35h1440V40Z" fill="#e15a41"/>
    </svg>
        </div>
</div>

{% schema %}
{
  "name": "Image Slider",
  "settings": [
    {
      "type": "header",
      "info": "Every block is an image",
      "content": "Add images to slider"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Image Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
