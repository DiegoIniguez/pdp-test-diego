{{ 'reviews.css' | asset_url | stylesheet_tag }}

<section class="reviews-section">
  <svg data-name="Layer 3" class="waveBottom" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 194.35">
    <path d="M706.45 109.26C782.8 78.3 859.48 46.41 941.49 46.41S1121.26 95.3 1200 95.3c102.45 0 240-95.3 240-95.3H0v73s68.78-11.7 141.86-11.68c162.04 0 247.35 99.95 369.7 99.95 60.7 0 119.14-23.85 177.56-47.05l17.33-4.96Z" fill="#e15a41"></path>
    <path d="M1200 85.3c-78.74 0-175.26-48.89-258.51-48.89S782.8 70.3 706.45 101.26c-5.78 2.34-11.55 4.67-17.33 6.96-58.42 23.2-116.86 43.05-177.56 43.05-122.35 0-207.66-99.95-369.7-99.95C68.78 51.3 0 64 0 64v30s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V0s-137.55 85.3-240 85.3Z" fill="var(--magenta)"></path>
    <path d="M941.49 56.41c-150.98 0-283.92 114.86-429.93 114.86-122.35 0-207.66-99.95-369.7-99.95C68.78 71.33 0 84 0 84v20s68.78-12.67 141.86-12.68c162.04 0 247.35 99.95 369.7 99.95 146.01 0 278.95-114.86 429.93-114.86 83.25 0 179.77 48.89 258.51 48.89 102.45 0 240-85.3 240-85.3V20s-137.55 85.3-240 85.3c-78.74 0-175.26-48.89-258.51-48.89Z" fill="var(--lemon)"></path>
  </svg>
  <div class="reviews-container">
    <div class="reviews-header">
      <h2 class="reviews-title">{{ section.settings.heading }}</h2>
      <div class="reviews-meta">
        <div class="stars">★★★★★</div>
        <span>{{ section.settings.review_count }} Reviews</span>
      </div>
      <button class="write-review">{{ section.settings.button_label }}</button>
    </div>

    <div class="reviews-list">
      {% for block in section.blocks %}
        <div class="review-card">
          <div class="review-header">
            <div class="review-author">
              <strong>{{ block.settings.author }}</strong>
              <span class="verified">Verified Buyer</span>
            </div>
            <div class="review-date">{{ block.settings.date }}</div>
          </div>
          <div class="review-stars">★★★★★</div>
          <div class="review-title">{{ block.settings.title }}</div>
          <div class="review-body">{{ block.settings.body }}</div>
        </div>
      {% endfor %}
    </div>
    <div class="show-more-wrapper">
      <button class="show-more-btn">SHOW MORE</button>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reviews Section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Section Title",
      "default": "REVIEWS"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count",
      "default": "13"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Write a Review"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "Reviewer Name"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Review Date"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Review Title"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Review Body"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
